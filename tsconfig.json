{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2017",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@Internal/Components/*": ["./src/Components/*"],
      "@Internal/Components": ["./src/Components"],
      "@Internal/Reducers": ["./src/Reducers"],
      "@Internal/Api/*": ["./src/Api/*"],
      "@Internal/Models/*": ["./src/Models/*"],
      "@Internal/Screens/*": ["./src/Screens/*"],
      "@Internal/Screens": ["./src/Screens"],
      "@Internal/Hooks/*": ["./src/Hooks/*"],
      "@Internal/Constants/*": ["./src/Constants/*"],
      "@Internal/Utils/*": ["./src/Utils/*"],
      "@Internal/Generators/*": ["./src/Generators/*"],
      "@Internal/Config": ["./src/Config"],
      "@Internal/Public/*": ["./public/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js"]
}
